<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="co.edu.proyectofinal.Controlador.ControladorRegistro" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <TextField fx:id="nombreTextField" promptText="Nombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <TextField fx:id="apellidoTextField" promptText="Apellido" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <TextField fx:id="usuarioTextField" promptText="Usuario" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <PasswordField fx:id="contraseñaPasswordField" promptText="Contraseña" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <TextField fx:id="documentoTextField" promptText="Documento" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <TextField fx:id="tipoUsuarioTextField" promptText="Tipo de Usuario (empleado o propietario)" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    <Button text="Registrar" onAction="#registrar" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    <Button text="Regresar" onAction="#regresarALogin" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
</GridPane>
