<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="co.edu.proyectofinal.Controlador.ControladorLogin" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <TextField fx:id="usuarioTextField" promptText="Usuario" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <PasswordField fx:id="contraseñaPasswordField" promptText="Contraseña" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button text="Iniciar Sesión" onAction="#iniciarSesion" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Button text="Registrarse" onAction="#registrarUsuario" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
</GridPane>
