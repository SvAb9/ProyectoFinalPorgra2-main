<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.proyectofinal.Controlador.ControladorPropietario">
   <children>
      <Label text="Nombre del Empleado:" />
      <TextField fx:id="nombreEmpleadoTextField" />

      <Label text="Apellido del Empleado:" />
      <TextField fx:id="apellidoEmpleadoTextField" />

      <Label text="Usuario del Empleado:" />
      <TextField fx:id="usuarioEmpleadoTextField" />

      <Label text="Contraseña del Empleado:" />
      <TextField fx:id="contraseñaEmpleadoTextField" />

      <Label text="Documento del Empleado:" />
      <TextField fx:id="documentoEmpleadoTextField" />

      <Button text="Contratar Empleado" onAction="#contratarEmpleado" />
      <Button text="Despedir Empleado" onAction="#despedirEmpleado" />

      <Label text="Empleados:" />
      <ListView fx:id="empleadosListView" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
