<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="co.edu.proyectofinal.Controlador.ControladorMesero" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <children>
        <HBox spacing="10">
            <children>
                <ComboBox fx:id="tipoProductoComboBox" promptText="Tipo de Producto" />
                <TextField fx:id="nombreTextField" promptText="Nombre" />
                <TextField fx:id="precioTextField" promptText="Precio" />
                <ComboBox fx:id="temporadaComboBox" promptText="Temporada" />
                <Button text="Agregar Producto" onAction="#agregarProducto" />
            </children>
        </HBox>
        <ListView fx:id="ordenListView" prefHeight="200" />
        <HBox spacing="10">
            <children>
                <ComboBox fx:id="estadoComboBox" promptText="Estado de la Orden" />
                <Button text="Actualizar Estado" onAction="#actualizarEstadoOrden" />
            </children>
        </HBox>
        <Button text="Ir a Cajero" onAction="#regresarACajero" />
    </children>
</VBox>
